<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//LOGGER" "http://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/xml/doc-files/log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{ISO8601} %C  [%t] %-5p %m%n" />
		</layout>
	</appender>
	
	<appender name="file" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="c:/construct-logs/ym-logs.log" />
		<param name="Threshold" value="info" />
		<param name="MaxFileSize" value="10000KB" />
		<param name="MaxBackupIndex" value="1" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{ISO8601} %C  [%t] %-5p %m%n" />
		</layout>
	</appender>
	

	<appender name="fileErrors" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="c:/construct-logs/ym-errors-logs.log" />
		<param name="Threshold" value="warn" />
		<param name="MaxFileSize" value="5000KB" />
		<param name="MaxBackupIndex" value="1" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{ISO8601} %C  [%t] %-5p %m%n" />
		</layout>
	</appender>
	<appender name="fileSoapCalls" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="c:/construct-logs/ym-soap-logs.log" />
		<param name="Threshold" value="info" />
		<param name="MaxFileSize" value="5000KB" />
		<param name="MaxBackupIndex" value="1" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{ISO8601} %C  [%t] %-5p %m%n" />
		</layout>
	</appender>

	<!-- log rest calls -->
	<logger name="org.springframework.web.client.RestTemplate">
		<level value="trace" />
		<appender-ref ref="fileSoapCalls" />
	</logger>
	<logger name="com.tnourji.logger.REST">
		<level value="info" />
		<appender-ref ref="fileSoapCalls" />
	</logger>
	<logger name="org.springframework.http.client">
		<level value="trace" />
		<appender-ref ref="fileSoapCalls" />
	</logger>
	<logger name="org.springframework.http.client.support.HttpAccessor">
		<level value="trace" />
		<appender-ref ref="fileSoapCalls" />
	</logger>


	<!-- Application Loggers -->

	<logger name="com.tnourji">
		<level value="info" />
	</logger>

	<!-- 3rdparty Loggers -->
	<logger name="com.google.maps.GeoApiContext">
		<level value="INFO" />
	</logger>
	<logger name="org.apache">
		<level value="INFO" />
	</logger>
	<logger name="org.hibernate">
		<level value="trace" />
	</logger>
	<logger name="org.springframework">
		<level value="INFO" />
	</logger>
	<logger name="org.dozer">
		<level value="error" />
	</logger>
	<logger name="org.apache.cxf.jaxb">
		<level value="info" />
	</logger>
	<logger name="com.opensymphony">
		<level value="error" />
	</logger>
	<logger name="net.sf.ehcache">
		<level value="warn" />
	</logger>
	<logger name="freemarker" additivity="false">
		<level value="off" />
	</logger>
	<logger name="net.sf.ehcache">
		<level value="trace"/>
	</logger>
	<!-- Root Logger -->
	<root>
		<priority value="debug" />
		<appender-ref ref="console" />
		<appender-ref ref="file" />
		<appender-ref ref="fileErrors" />
	</root>

</log4j:configuration>
